{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header" style="background-image: url({{#if @blog.cover}}{{@blog.cover}}{{else}}./assets/images/defaultCover.jpg{{/if}})">
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
            <div>
                <div class="iconSocialHome">
                    <a href="https://www.facebook.com/jointDeveloper/?fref=ts">
                        <i class="fa fa-facebook-square fa-4x" aria-hidden="true"></i>
                        <!-- <img class="imgAvatar imgFacebook" src="./assets/images/icons/facebook.png"> -->
                    </a>
                </div>
                <div class="iconSocialHome">
                    <a href="https://twitter.com/jointdev">
                        <i class="fa fa-twitter-square fa-4x" aria-hidden="true"></i>
			<!-- <img class="imgAvatar imgTwitter" src="./assets/images/icons/twitter.png"> -->
                    </a>
                </div>
                <div class="iconSocialHome">
                    <a href="https://github.com/jointDeveloper">
                        <i class="fa fa-github-square fa-4x" aria-hidden="true"></i>
			<!-- <img class="imgAvatar imgGithub" src="./assets/images/icons/github.png"> -->
                    </a>
                </div>     
            </div>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

